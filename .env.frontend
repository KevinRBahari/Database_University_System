# Frontend Environment Configuration Template
# Copy this file to .env and update the values according to your environment

# API Configuration
# Update this to match your backend API URL
VITE_API_URL=http://localhost:3000/api

# Application Configuration
VITE_APP_NAME=University Database System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=University Course and Student Management System

# Development Server Configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# Build Configuration
VITE_BUILD_OUTDIR=dist
VITE_BUILD_ASSETSDIR=assets

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# External Services Configuration (for future use)
# VITE_ANALYTICS_ID=your-analytics-id
# VITE_SENTRY_DSN=your-sentry-dsn

# Theme Configuration
VITE_THEME_PRIMARY_COLOR=#4f46e5
VITE_THEME_SECONDARY_COLOR=#64748b
VITE_THEME_ACCENT_COLOR=#06b6d4
